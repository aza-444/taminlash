{% extends 'base.html' %}

{% block content %}
<!-- TOP CAROUSEL -->
<div class="top-carousel container">
    <div class="carousel swiper heroSwiper">
        <div class="swiper-wrapper">
            {% for slide in carousel_slides %}
            <div class="swiper-slide top-carousel__item">
                <a href="{{ slide.url }}" class="d-block w-100 h-100">
                    {% if slide.image %}
                        <img src="{{ slide.image.url }}" alt="{{ slide.title }}" class="carousel-card__img">
                    {% else %}
                        <img src="/static/img/default.jpg" alt="Default Slide" class="carousel-card__img">
                    {% endif %}
                    <div class="top-carousel__content">
                        <h2>{{ slide.title|default:"Slayder qo‘shilmagan" }}</h2>
                    </div>
                </a>
            </div>
            {% empty %}
            <div class="swiper-slide top-carousel__item">
                <img src="/static/img/default.jpg" alt="Default Slide" class="carousel-card__img">
                <div class="top-carousel__content">
                    <h2>Slayder qo‘shilmagan</h2>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</div>

{% block extra_js %}
<script>
    const swiper = new Swiper('.heroSwiper', {
        loop: true,
        autoplay: { delay: 5000 },
        pagination: { el: '.swiper-pagination', clickable: true },
        navigation: { nextEl: '.swiper-button-next', prevEl: '.swiper-button-prev' },
    });
</script>
{% endblock %}

